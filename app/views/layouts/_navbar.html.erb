<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Messages</a>
          </li>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" data-turbo-method="delete" href="#">Log out</a>
            </div>
          </li>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
<div class="navbar">
  <div class="navbar-container">
    <div class="navbar-icons-container">
      <div class="navbar-notification-bell">
        <% if user_signed_in? %>
          <span class="navbar-notification-icon"><i class="fa-solid fa-bell fa-lg" style="color: #062c14;"></i></span>
            <% if user_signed_in? && current_user.messages.unread.exists? %>
              <span class="navbar-notification-count">
                <%= current_user.messages.unread.count %>
              </span>
            <% else %>
              <span class="navbar-notification-count hide-notification">
              0
              </span>
            <% end %>
        <% end %>
      </div>
        <div class="navbar-menu-icon">
          <span><i class="fa-solid fa-bars fa-xl" style="color: #062c14;"></i></span>
        </div>
    </div>
    <div class="navbar-bottom-container">
      <div class="navbar-logo">
        <%= image_tag "https://i.ibb.co/3YZD43H/rent-a-chef-logo.png", class: "navbar-logo" %>
      </div>
      <div class="navbar-button">
        <% if user_signed_in? %>
          <%= form_tag destroy_user_session_path, method: :delete do %>
            <%= submit_tag 'Log out', class: 'signup-button' %>
          <% end %>
        <% else %>
          <button class="signup-button" onclick="window.location.href='<%= user_session_path %>'"><i class="fa-solid fa-lock fa-2xs" style="color: #f0f0f0;"></i> Sign In</button>
          <button class="signup-button" onclick="window.location.href='<%= new_user_registration_path %>'"><i class="fa-solid fa-user fa-2xs" style="color: #f0f0f0;"></i> Register</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
