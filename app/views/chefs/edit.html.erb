<%= form_with(model: @chef, url: chef_path(@chef), method: :patch) do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.label :specialties %>
    <%= form.text_field :specialties %>
  </div>

  <%= form.submit 'Update Profile' %>
<% end %>
