<div class="form">
  <div class="form-container">
    <h2>Forgot your password?</h2>

    <div style="margin-top:20px;margin-bottom:20px"><h4>Please enter your email address. You will receive a link to create a new password.</h4></div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-input-style" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Reset Password", class: "submit-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
