<div class="container">
  <%= link_to 'Back', users_path, class: 'btn-grey' %>
  <div class="content-container">
    <% if @chef.profile_photo.key.nil? %>
      <%= image_tag("https://images.unsplash.com/photo-1499715217757-2aa48ed7e593?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80", size: '750x500', alt: 'Default chef profile picture') %>
    <% else %>
      <%= cl_image_tag @chef.profile_photo.key, height: 500 %>
    <% end %>
    <div class="chef-name-inline">
    <h1><%= @chef.first_name %> <%= @chef.last_name %></h1>
    <div class="info-flex">
    <p>Price <%= number_to_currency(@chef.price, precision: 0) %>/hr</p>
    <% unless @chef == current_user %>
      <%= link_to "Book chef", new_user_booking_path(@chef) %>
    <% end %>
    </div>
    </div>
    <p><%= @chef.description %></p>
    <% @chef.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400 %>
    <% end %>


    <% if @chef == current_user %>
      <%= link_to 'Edit profile',edit_user_path(@chef) %>
    <% end %>

    <%= link_to 'Home', root_path %>
    |
    <%= link_to 'Chefs', users_path %>
    |
  </div>
</div>
