<div class="container">
  <h1>Book Chef</h1>

  <h2>Chef Availability</h2>

  <% if @availability %>
    <p>The chef is available.</p>
  <% else %>
    <p>The chef is not available.</p>
  <% end %>

  <%= render 'shared/errors', errors: @booking.errors if @booking.errors.any? %>

  <%= form_with(model: @booking, url: create_booking_user_path(@chef), method: :post) do |form| %>
    <div>
      <%= form.label :status %>
      <%= form.text_field :status %>
    </div>

    <div>
      <%= form.label :date %>
      <%= form.date_select :date %>
    </div>

    <%= form.submit 'Book Chef' %>
  <% end %>

  <%= link_to 'Back', user_path(@chef) %>
</div>
